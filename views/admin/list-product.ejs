                                            <td><%=i%></td>
                                            <td><%=item.name_product%></td>
                                            <td><%=item.name_type%></td>
                                            <td><%=item.describe%></td>
                                            <td><%=item.price%></td>
                                            <td><%=item.fullname%></td>
