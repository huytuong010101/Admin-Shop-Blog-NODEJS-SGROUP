    <script>
        function showDetail(event) {
            id_type = event.getAttribute("id_type")
            $.ajax({
                method: "POST",
                url: "/admin/detailtype",
                data: { id: id_type }
            })
                .done(function (response) {
                    if (response["result"] != "OK") return
                    name_type = response["data"]["name_type"]
                    user_type = response["data"]["fullname"]
                    created_at_type = response["data"]["created_at_type"]
                    updated_at_type = response["data"]["updated_at_type"]
                    $("#name_type").val(name_type)
                    $("#user_type").val(user_type)
                    $("#created_at_type").val(created_at_type)
                    $("#updated_at_type").val(updated_at_type)
                    response["data"]["products"].forEach((item) => {
                        $("#productsOfType").append('<li class="list-group-item">' + item.name_product + '</li>');
                    })

                });
        }
        function showUpdateType(event) {
            name_type = event.getAttribute("name_type")
            id_type = event.getAttribute("id_type")
            $("#name_update_type").val(name_type)
            $("#id_update_type").val(id_type)
        }
        function updateType() {
            data = $('#formUpdateType').serialize();
            $.ajax({
                method: "POST",
                url: "/admin/updatetype?_method=PUT",
                data: data
            })
                .done(function (response) {
                    if (response["result"] != "OK") {
                        alert(response["error"])
                    } else {
                        location.reload();
                    }
                })
        }
        function showDetailProduct(event) {
            id_product = event.getAttribute("id_product")
            $.ajax({
                method: "POST",
                url: "/admin/detailproduct",
                data: { id: id_product }
            })
                .done(function (response) {
                    console.log(response)
                    if (response["result"] != "OK") return
                    $('#name_poduct').val(response["data"]["name_product"])
                    $('#price').val(response["data"]["price"])
                    $('#user_product').val(response["data"]["fullname"])
                    $('#type_product').val(response["data"]["name_type"])
                    $('#decribe').text(response["data"]["describe"])
                    $("#created_at_product").val(response["data"]["created_at_product"])
                    $("#updated_at_product").val(response["data"]["created_at_product"])
                    $('#product_image').attr("src", response["data"]["image_product"])
                });
        }
        function showUpdateProduct(event) {
            id_product = event.getAttribute("id_product")
            $.ajax({
                method: "POST",
                url: "/admin/detailproduct",
                data: { id: id_product }
            })
                .done(function (response) {
                    if (response["result"] != "OK") return
                    $('#product_name_update').val(response["data"]["name_product"])
                    $('#product_price_update').val(response["data"]["price"])
                    $('#type_id_update').val(response["data"]["id_type"])
                    $('#decribe_update').text(response["data"]["describe"])
                });
            $("#id_product_update").val(id_product)
        }
    </script>
</body>

