                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Product name</th>
                                            <th>Type</th>
                                            <th>Describe</th>
                                            <th>Price</th>
                                            <th>Who create</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% i = 1 %>
                                        <% products.forEach(function(item){ %>
