                <!-- row -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3>LIST TYPE</h3>
                            <form class="form-inline" method="POST" action="/admin/addnewtype">
                                <div class="form-group mx-sm-3 mb-2">
                                    <label for="nametype" class="sr-only">Name of type</label>
                                    <input required name="nameOfNewType" type="text" class="form-control" id="nametype"
                                        placeholder="Name of new type">
                                </div>
                                <button type="submit" class="btn btn-primary mb-2">Add new type</button>
                            </form>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Type name</th>
                                            <th>Who create</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% i = 1 %>
                                        <% type.forEach(function(item){ %>
                                        <tr>
                                            <td><%=i%></td>
                                            <td><%=item.name_type%></td>
                                            <td><%=item.fullname%></td>
                                            <td>
                                                <a id_type="<%=item.id_type%>" class="btn btn-primary text-center"
                                                    onclick="showDetail(this)" data-toggle="modal"
                                                    data-target="#detailTypeModal">
                                                    <i class="far fa-credit-card"></i></a>
                                                <a class="btn btn-primary text-center" data-toggle="modal"
                                                    data-target="#updateTypeModal" name_type="<%=item.name_type%>"
                                                    id_type="<%=item.id_type%>" onclick="showUpdateType(this)">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form onsubmit="return confirm('Bạn có chắc muốn xóa ?')"
                                                    class="d-inline" method="POST"
                                                    action="/admin/deletetype?_method=DELETE">
                                                    <input name="iddelete" type="hidden" value="<%=item.id_type%>">
                                                    <button class="btn btn-primary text-center"><i
                                                            class="fas fa-trash-alt"></i>
                                                </form>
                                            </td>
                                        </tr>
                                        <% i = i + 1 %>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

