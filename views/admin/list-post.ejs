        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-12">
                        <h4 class="page-title">Basic Table</h4>
                        <ol class="breadcrumb">
                            <li><a href="#">Dashboard</a></li>
                            <li class="active">Basic Table</li>
                        </ol>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- row -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3>LIST CATEGORY</h3>
                            <form class="form-inline" method="POST" action="/admin/add-new-category">
                                <div class="form-group mx-sm-3 mb-2">
                                    <label for="namecategory" class="sr-only">Name of category</label>
                                    <input required name="nameOfNewCategory" type="text" class="form-control"
                                        id="namecategory" placeholder="Name of new category">
                                </div>
                                <button type="submit" class="btn btn-primary mb-2">Add new category</button>
                            </form>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Type name</th>
                                            <th>Who create</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% i = 1 %>
                                        <% category.forEach(function(item){ %>
                                        <tr>
                                            <td><%=i%></td>
                                            <td><%=item.name_category%></td>
                                            <td><%=item.fullname%></td>
                                            <td>
                                                <a href="/post/category/<%=item.slug_category%>"
                                                    class="btn btn-primary text-center">
                                                    <i class="far fa-credit-card"></i></a>
                                                <a class="btn btn-primary text-center" data-toggle="modal"
                                                    data-target="#updateCategoryModal"
                                                    name_category="<%=item.name_category%>"
                                                    id_category="<%=item.id_category%>"
                                                    onclick="showUpdateCategory(this)">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form onsubmit="return confirm('Bạn có chắc muốn xóa ?')"
                                                    class="d-inline" method="POST"
                                                    action="/admin/delete-category?_method=DELETE">
                                                    <input name="idDelete" type="hidden" value="<%=item.id_category%>">
                                                    <button class="btn btn-primary text-center"><i
                                                            class="fas fa-trash-alt"></i>
                                                </form>
                                            </td>
                                        </tr>
                                        <% i = i + 1 %>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="white-box">
                            <h3>LIST POST</h3>
                            <button type="button" class="btn btn-primary"
                                onclick="window.location.href = '/admin/add-post'">
                                Add new post
                            </button>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Post title</th>
                                            <th>Category</th>
                                            <th>Who create</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% i = 1 %>
                                        <% posts.forEach(function(item){ %>
                                        <tr>
                                            <td><%=i%></td>
                                            <td><%=item.name_post%></td>
                                            <td><%=item.name_category%></td>
                                            <td><%=item.fullname%></td>
                                            <td>
                                                <a id_product="<%=item.id_post%>" class="btn btn-primary text-center"
                                                    href="/detail-post/<%=item.slug_post%>">
                                                    <i class="far fa-credit-card"></i></a>
                                                <a id_product="<%=item.id_post%>" class="btn btn-primary text-center"
                                                    href="/admin/update-post/<%=item.slug_post%>">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button onclick="deletePost(<%=item.id_post%>)"
                                                    class="btn btn-primary text-center"><i
                                                        class="fas fa-trash-alt"></i></button>
                                            </td>
                                        </tr>
                                        <% i = i + 1 %>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
