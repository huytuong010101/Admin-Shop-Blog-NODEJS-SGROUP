    <script>
        function showDetail(event) {
            id_type = event.getAttribute("id_type")
            $.ajax({
                method: "POST",
                url: "/admin/detailtype",
                data: { id: id_type }
            })
                .done(function (response) {
                    if (response["result"] != "OK") return
                    name_type = response["data"]["name_type"]
                    user_type = response["data"]["fullname"]
                    created_at_type = response["data"]["created_at_type"]
                    updated_at_type = response["data"]["updated_at_type"]
                    $("#name_type").val(name_type)
                    $("#user_type").val(user_type)
                    $("#created_at_type").val(created_at_type)
                    $("#updated_at_type").val(updated_at_type)
                    response["data"]["products"].forEach((item) => {
                        $("#productsOfType").append('<li class="list-group-item">' + item.name_product + '</li>');
                    })

                });
        }
        function showUpdateCategory(event) {
            name_category = event.getAttribute("name_category")
            id_category = event.getAttribute("id_category")
            $("#name_update_category").val(name_category)
            $("#id_update_category").val(id_category)
        }
        function updateCategory() {
            data = $('#formUpdateCategory').serialize();
            $.ajax({
                method: "POST",
                url: "/admin/update-category?_method=PUT",
                data: data
            })
                .done(function (response) {
                    if (response["result"] != "OK") {
                        alert(response["error"])
                    } else {
                        location.reload();
                    }
                })
        }
        function deletePost(event) {
            if (!confirm("Are you sure?")) return;
            $.ajax({
                method: "POST",
                url: "/api/v1/delete-post?_method=DELETE",
                data: { id: event }
            })
                .done(function (response) {
                    if (response["result"] != "OK") alert("Something was wrong")
                    else window.location.href = "/admin/list-posts"
                });
        }
    </script>
